{
  "manifest_version": 3,
  "name": "Translate Extension",
  "version": "1.0.0",
  "description": "Traduce texto seleccionado en la p√°gina web.",

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon-16.png",
      "32": "icon-32.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },

  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },

  "side_panel": {
    "default_path": "index.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ],

  "permissions": ["storage", "notifications", "sidePanel", "tabs"],

  "host_permissions": ["https://api.mymemory.translated.net/*"]
}
